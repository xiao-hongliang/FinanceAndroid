            <!--</LinearLayout>-->

            <com.pudding.financeandroid.view.MyListView
                android:id="@+id/info_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.pudding.financeandroid.view.MyListView>

        </LinearLayout>
</ScrollView>

