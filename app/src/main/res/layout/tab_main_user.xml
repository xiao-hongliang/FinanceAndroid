                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_margin"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_center_2"
                android:layout_toRightOf="@+id/user_center_2"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/font_9"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_rightrow"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/user_center_layout_3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/user_center_3"
                android:layout_width="wrap_content"
